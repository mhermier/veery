
import "io" for Stdin;

import "veery/event/input" for Input;
import "veery/event/key" for Key;
import "veery/event/loop" for Loop;

Stdin.isRaw = true;

var event_loop = Loop.new();
var input = Input.new();

event_loop.run();

// FIXME: move to proper handler
while (true) {
  var key = input.read();
  System.print(key);

  if (key == Key.fromString("Ctrl+C")) {
    event_loop.stop();
    break;
  }
}
